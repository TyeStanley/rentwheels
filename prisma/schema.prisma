generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  picture   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  car       Car[]
}

model Car {
  id           String       @id @default(uuid())
  title        String
  type         String
  rentPrice    Int
  capacity     Int
  transmission Transmission
  location     String
  fuelCapacity Int
  description  String
  images       String[]

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Transmission {
  Manual
  Automatic
}
